set autoindent
set indicator
set smarthome
set softwrap
set zap

set titlecolor #000,lightcyan
set selectedcolor #000,lightcyan
set spotlightcolor black,lightyellow
set statuscolor #000,lightcyan
set numbercolor cyan
set stripecolor ,#444
set scrollercolor cyan
set keycolor cyan
set functioncolor cyan

include "/usr/share/nano/*.nanorc"

bind ^Z suspend main

unbind M-J main
unbind M-T main
